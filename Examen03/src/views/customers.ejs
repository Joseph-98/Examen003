<% include partials/_header %>

<div class="container mt-5">
  <div class="row">


    <div class="col-md-5">
      <div class="card-body">

        <form action="/add" method="POST">

          <div class="form-group">
            <input type="text" name="CODIGO" placeholder="CODIGO" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="DEPARTAMENTO" placeholder="DEPARTAMENTO" class="form-control" autofocus>
          </div>
          <div class="form-group">
            <input type="text" name="MUNICIPIO" placeholder="MUNICIPIO" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="CENTRO_POBLADO" placeholder="CENTRO_POBLADO" class="form-control">
          </div>

          <div class="form-group">
            <input type="text" name="NATURALEZA_BIBLIOTECA" placeholder="NATURALEZA_BIBLIOTECA" class="form-control">
          </div>

          <div class="form-group">
            <input type="text" name="TIPO_BIBLIOTECA" placeholder="TIPO_BIBLIOTECA" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="NOMBRE_BIBLIOTECA" placeholder="NOMBRE_BIBLIOTECA" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" name="DIRECCION_BIBLIOTECA" placeholder="DIRECCION_BIBLIOTECA" class="form-control">
          </div>

          <div class="form-group">
            <input type="text" name="TELEFONO" placeholder="TELEFONO" class="form-control">
          </div>

          <div class="form-group">
            <input type="text" name="ESTADO_BIBLIOTECA" placeholder="ESTADO_BIBLIOTECA" class="form-control">
          </div>

          <div class="form-group">
            <input type="text" name="GEOREFERENCIA" placeholder="GEOREFERENCIA" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">
            INSERTAR BIBLIOTECA
          </button>
        </form>
      </div>
    </div>




    <div class="col-md-6">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>CODIGO</td>
            <td>DEPARTAMENTO</td>
            <td>MUNICIPIO</td>
            <td>CENTRO_POBLADO</td>
            <td>NATURALEZA_BIBLIOTECA</td>
            <td>TIPO_BIBLIOTECA</td>
            <td>NOMBRE_BIBLIOTECA</td>
            <td>DIRECCION_BIBLIOTECA</td>
            <td>TELEFONO</td>
            <td>ESTADO_BIBLIOTECA</td>
            <td>GEOREFERENCIA</td>
            <td>ACCION</td>
          </tr>
        </thead>
        <tbody>
          <% if (data) { %>
            <% for(var i = 0; i < data.length; i++) { %>
              <tr>

                <td><%= data[i].CODIGO %></td>
                <td><%= data[i].DEPARTAMENTO %></td>
                <td><%= data[i].MUNICIPIO %></td>
                <td><%= data[i].CENTRO_POBLADO %></td>
                <td><%= data[i].NATURALEZA_BIBLIOTECA %></td>
                <td><%= data[i].TIPO_BIBLIOTECA %></td>
                <td><%= data[i].NOMBRE_BIBLIOTECA %></td>
                <td><%= data[i].DIRECCION_BIBLIOTECA %></td>
                <td><%= data[i].TELEFONO %></td>
                <td><%= data[i].ESTADO_BIBLIOTECA %></td>
                <td><%= data[i].GEOREFERENCIA %></td>
                <td>
                  <a href="/update/<%= data[i].CODIGO %>" class="btn btn-info">Edit</a>
                  <a href="/delete/<%= data[i].CODIGO %>" class="btn btn-danger">Delete</a>
                </td>
              </tr>
            <% } %>
          <% } %>
        </tbody>
      </table>
    </div>

  </div>
</div>

<% include partials/_footer %>
